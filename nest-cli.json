{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.build.json",
    "plugins": ["@nestjs/swagger/plugin"],
    "assets": [
      {
        "include": "**/*.yaml",
        "outDir": "dist",
        "watchAssets": true
      }
    ]
  }
}